<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.adios.budgeter.fragments.DateTimeFragment">

    <ru.adios.budgeter.widgets.DateEditView
        android:id="@+id/enter_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="70%"
        tools:ignore="TextFields"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"/>
    <ru.adios.budgeter.widgets.TimeEditView
        android:id="@+id/enter_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="30%"
        android:layout_toRightOf="@id/enter_date"
        android:layout_toEndOf="@id/enter_date"
        tools:ignore="TextFields"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"/>
    <TextView
        android:id="@+id/enter_datetime_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=""
        android:textColor="#af0b0b"
        android:layout_below="@id/enter_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

</android.support.percent.PercentRelativeLayout>
