<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_funds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.adios.budgeter.AddFundsActivity">

    <EditText
        android:id="@+id/amount_decimal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/amount_decimal_hint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/amount_currency"
        android:layout_toStartOf="@id/amount_currency"
        android:inputType="numberDecimal" />
    <EditText
        android:id="@+id/amount_currency"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:hint="@string/amount_currency_hint"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_funds_info"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/add_funds_finish_button"
        android:onClick="addFunds" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/amount_decimal_info"
        android:layout_below="@id/amount_decimal"
        android:layout_toLeftOf="@id/amount_currency_info"
        android:layout_toStartOf="@id/amount_currency_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/amount_currency_info"
        android:layout_below="@id/amount_currency"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=""
        android:id="@+id/add_funds_info"
        android:layout_below="@id/amount_decimal_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

</RelativeLayout>
