<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.adios.budgeter.FundsAgentFragment">

    <ru.adios.budgeter.util.FlexibleNotifyingSpinner
        android:id="@+id/agents_spinner"
        android:layout_width="0dp"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:prompt="@string/agents_spinner_prompt"
        android:spinnerMode="dialog"/>
    <Button
        android:id="@+id/agents_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/agents_spinner"
        android:layout_toEndOf="@id/agents_spinner"
        android:layout_alignTop="@id/agents_spinner"
        android:layout_alignBottom="@id/agents_spinner"
        android:background="@drawable/round_button"
        android:text="@string/add_button_general"
        android:textColor="#fff"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/agents_spinner_info"
        android:layout_width="0dp"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#af0b0b"
        android:layout_below="@id/agents_add_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/agents_name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="70%"
        android:hint="@string/agent_name_hint"
        android:layout_below="@+id/agents_spinner_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text"
        android:visibility="gone"/>
        <!--android:visibility="visible"/>-->
    <Button
        android:id="@+id/agents_submit_button"
        android:layout_width="0dp"
        app:layout_widthPercent="30%"
        android:layout_height="0dp"
        android:layout_below="@id/agents_spinner_info"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/agents_name_input"
        android:layout_alignTop="@id/agents_name_input"
        android:text="@string/accounts_submit_button"
        android:visibility="gone"/>
        <!--android:visibility="visible"/>-->
    <TextView
        android:id="@+id/agents_name_input_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#af0b0b"
        android:layout_below="@id/agents_name_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

</android.support.percent.PercentRelativeLayout>
