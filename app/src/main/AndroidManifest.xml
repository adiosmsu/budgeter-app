<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.adios.budgeter" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddFundsActivity"
            android:label="@string/title_activity_add_funds"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.adios.budgeter.HomeActivity" />
        </activity>
        <activity
            android:name=".FundsMutationActivity"
            android:label="@string/title_activity_funds_mutation"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.adios.budgeter.HomeActivity" />
        </activity>
        <activity
            android:name=".ExchangeCurrenciesActivity"
            android:label="@string/title_activity_exchange_currencies"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.adios.budgeter.HomeActivity" />
        </activity>
    </application>

</manifest>
